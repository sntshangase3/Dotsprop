<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Homeownership Cost"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:typeface="sans" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Property Cost"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Insurance *" />

                <EditText
                    android:id="@+id/edtinsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
android:hint="Home Insurance"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Bond/Mortgage *" />

                <EditText
                    android:id="@+id/edbond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Association *" />

                <EditText
                    android:id="@+id/edtassociation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="Homeowners Association"
                    android:inputType="number"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Municipality Cost"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Taxes Rates *" />

                <EditText
                    android:id="@+id/edttaxrates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"

                    android:padding="5dp"
                    android:textColor="#5d5d5d" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Electricity *" />

                <EditText
                    android:id="@+id/edtelectricity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Water *" />

                <EditText
                    android:id="@+id/edtwater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Maintenance Cost"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Cleaning *" />

                <EditText
                    android:id="@+id/edtcleaning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Security * " />

                <EditText
                    android:id="@+id/edtsecurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"

                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Gardening *" />

                <EditText
                    android:id="@+id/edtgardening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Home repairs " />

                <EditText
                    android:id="@+id/edthomerepairs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="1dp"

                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:padding="7dp"
                    android:text="Register"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:padding="7dp"
                    android:text="Update"
                    android:textColor="@color/colorPrimaryDark" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>