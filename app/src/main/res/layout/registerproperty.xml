<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Property Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="sans" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                >

                <Spinner
                    android:id="@+id/spinnerprppertyname"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/button_bground"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Location *" />

                <EditText
                    android:id="@+id/edtlocation"
                    android:layout_width="match_parent"
android:hint="e.g Parkview"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address" />

                <EditText
                    android:id="@+id/edtaddress"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="3 Poll St,Brooklyn,Cape Town,7405"
                    android:background="@drawable/edittext_bground"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Pay Status *" />

                <Spinner
                    android:id="@+id/spinnerpaystatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Amount Pay *" />

                <EditText
                    android:id="@+id/edtpaymentamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Municipality *" />

                <EditText
                    android:id="@+id/edtmunicipalityvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:hint="Valuation"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Independent *" />

                <EditText
                    android:id="@+id/edtindependentvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginTop="1dp"
                    android:hint="Valuation"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Market Price *" />

                <EditText
                    android:id="@+id/edtrangemarketprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="Area Market Seling Range Price"
                    android:background="@drawable/edittext_bground"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Bedroom " />

                <EditText
                    android:id="@+id/edtnumberofbedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of bedroom"
                    android:inputType="number"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Bathroom " />

                <EditText
                    android:id="@+id/edtnumberofbathroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="Number of bathroom"
                    android:inputType="number"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Otherrooms " />

                <EditText
                    android:id="@+id/edtotherrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="garage,kitchen,lounge,bar e.t.c"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Swimming Pool *" />

                <EditText
                    android:id="@+id/edthasswimmingpool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="Yes/No"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Lapa/Intertainment *" />

                <EditText
                    android:id="@+id/edtlapaOrintertainment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:hint="Yes/No"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:textColor="#5d5d5d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Image" />

                <ImageView
                    android:id="@+id/propertyprofileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profilephoto" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="1dp"

                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:padding="7dp"
                    android:text="Add Property"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:padding="7dp"
                    android:text="Update Property"
                    android:textColor="@color/colorPrimaryDark" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>