<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/relativeorder"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:src="@drawable/profil"
        android:id="@+id/lblproimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lbltaskvalue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="250dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lblproimage" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/setting"
        android:src="@drawable/setting2"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/lbltaskvalue" />

    />
    <TextView
        android:id="@+id/lbldec"
        android:layout_below="@id/lbltaskvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Counts:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/lblproimage" />
    <TextView
        android:id="@+id/lblstatus"
        android:layout_below="@id/lbldec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:textStyle="italic"
        android:textColor="@color/colorAvoca"
        android:layout_toEndOf="@+id/lblproimage" />





</RelativeLayout>