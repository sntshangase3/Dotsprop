<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:scaleType="centerCrop"
    android:id="@+id/homepage"
    android:background="@drawable/home_background"

    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Back  "
             android:textStyle="bold"
            android:clickable="true"
            android:id="@+id/txtback"
            android:layout_gravity="left"
            />
        <Spinner
            android:id="@+id/spinnerservice"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#5d5d5d" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/setting"
            android:src="@drawable/setting1"
            android:layout_weight="1"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"

        android:layout_gravity="center_horizontal"
        >


        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryBackGround"
            android:textColor="#303F9F"

            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:id="@+id/btn_detail"
            android:text="Details" />


        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryBackGround"
            android:textColor="#303F9F"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:id="@+id/btn_photo"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:text="Photos" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Date: 10 December 2019"
            android:textStyle="bold"
            android:id="@+id/txtdate"
            android:layout_marginTop="2dp"
            android:layout_margin="2dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@color/colorWhite">
        <ListView
            android:visibility="gone"
            android:id="@+id/lstgross"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:divider="@color/colorPrimaryDark"
            android:padding="1dp"
            android:layout_weight="1"
            >
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@color/colorWhite">
        <ListView
          android:visibility="gone"
            android:id="@+id/lstgross1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
android:dividerHeight="2dp"
            android:divider="@color/colorPrimaryDark"
            android:padding="1dp"
            android:layout_weight="1"
            >
        </ListView>

    </LinearLayout>












    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:weightSum="3">


        <Button
            android:id="@+id/btn_complete"
            android:layout_width="120dp"
            android:layout_height="30sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/colorYellow"
            android:background="@drawable/status_prime_notice_home"
            android:text="Complete" />

        <Button
            android:layout_width="120dp"
            android:layout_height="30sp"
            android:text="incomplete"
            android:textColor="@color/colorRed"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_incomplete"
            android:layout_weight="1"
            android:background="@drawable/status_expire_notice_home"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <Button
            android:layout_width="120dp"
            android:layout_height="30sp"
            android:layout_marginLeft="100dp"
            android:text="New"
            android:textColor="@color/colorAvoca"
            android:id="@+id/btn_new"
            android:background="@drawable/status_fresh"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/imgpro"
            android:src="@drawable/profile"
            />

        <TextView
            android:id="@+id/txtpro"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorRed" />
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>