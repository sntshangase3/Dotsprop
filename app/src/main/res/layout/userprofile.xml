<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:layout_marginTop="10dp"
        android:typeface="sans"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layoutlist"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/colorWhite"
                >
                <ListView

                    android:id="@+id/lstgross"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:divider="@color/colorPrimaryDark"
                    android:padding="1dp"
                    android:layout_weight="1"

                    >
                </ListView>
            </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="First Name *"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#5d5d5d"
                android:background="@drawable/edittext_bground"
                android:padding="5dp"
                android:layout_marginTop="1dp"
                android:id="@+id/edtfirstname" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Last Name *"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtlastname" />
            </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Email *"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

android:inputType="textEmailAddress"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:hint="you@domain.com"
            android:layout_marginTop="1dp"
            android:id="@+id/edtemail" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Username *"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtusername" />
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Title *"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/spinnertitle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Department *"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/spinnerdeparment" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/layoutlistroles"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/colorWhite"
                >
                <ListView

                    android:id="@+id/lstroles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:divider="@color/colorWhite"
                    android:padding="1dp"
                    android:layout_weight="1"

                    >
                </ListView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutlistfunction"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/colorWhite"
                >
                <ListView

                    android:id="@+id/lstfuction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:divider="@color/colorWhite"
                    android:padding="1dp"
                    android:layout_weight="1"

                    >
                </ListView>
            </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bground"
            android:textColor="#303F9F"

            android:layout_margin="2dp"
            android:padding="7dp"
            android:layout_marginTop="1dp"
            android:id="@+id/btn_create"
            android:text="Sign Up" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/button_bground"
            android:textColor="#303F9F"

            android:padding="7dp"
            android:layout_marginTop="1dp"
            android:id="@+id/btn_save"
            android:text="Update" />


    

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>